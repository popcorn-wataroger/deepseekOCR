FROM python:3.10-slim

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    git \
    wget \
    poppler-utils \
    build-essential \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN git clone https://github.com/deepseek-ai/DeepSeek-OCR.git /DeepSeek-OCR

WORKDIR /DeepSeek-OCR

# CPU版のPyTorchをインストール
RUN pip install --timeout=600 --retries=10 torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cpu

# vLLMの代わりにtransformersを使用（CPU対応）
RUN pip install --timeout=600 --retries=10 transformers accelerate

# その他の依存関係
RUN pip install --timeout=600 --retries=10 \
    pillow \
    pdf2image \
    requests \
    numpy \
    opencv-python-headless

RUN pip install -r requirements.txt
